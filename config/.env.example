# YO Network Validator Configuration
# Copy this file to .env and customize for your setup

# ================================
# Network Settings
# ================================
NETWORK_ID=2025
CHAIN_ID=2025

# ================================
# Node Settings
# ================================
NODE_NAME=yo-validator
P2P_PORT=30303
RPC_PORT=8545
WS_PORT=8546

# ================================
# Validator Settings
# ================================
MINER_ENABLED=true
# Replace with your validator address
MINER_COINBASE=0x33D8dD5A4F871b8f78aBD7C5d82289bC026890C0

# ================================
# Performance Settings
# ================================
# Adjust based on your system resources
# For 4GB RAM system: -Xmx2g -Xms2g
# For 8GB RAM system: -Xmx4g -Xms4g
BESU_OPTS=-Xmx2g -Xms2g

# ================================
# Logging Settings
# ================================
LOG_LEVEL=INFO
# Available levels: TRACE, DEBUG, INFO, WARN, ERROR

# ================================
# Security Settings
# ================================
# Bind RPC to localhost only for security
RPC_HOST=127.0.0.1
WS_HOST=127.0.0.1

# Allow all origins for CORS (adjust for production)
RPC_CORS_ORIGINS=*

# ================================
# Advanced Settings
# ================================
# Uncomment and adjust if needed

# Gas price settings
# MIN_GAS_PRICE=1000000000

# Transaction pool settings
# TX_POOL_MAX_SIZE=4096

# Sync mode (FULL, FAST, SNAP)
# SYNC_MODE=FULL

# Enable metrics
# METRICS_ENABLED=true
# METRICS_PORT=9545
